= link_to 'Nowy Projekt', new_project_path, :class => 'btn btn-info btn-primary'

%h1 Lista Projektów
%table.table.table-striped
  %tr
    %th Nazwa Projektu
    %th Opis Projektu
    %th 
    %th 
    %th
  - @projects.each do |project|
    %tr
      %td= project.title
      %td= project.text
      %td= link_to 'Otworz', project_path(project), :class => 'btn btn-default btn-primary'
      %td= link_to 'Edytuj', edit_project_path(project), :class => 'btn btn-warning btn-primary'
      %td= link_to 'Usun', project_path(project), :class => 'btn btn-danger btn-primary', |
      method: :delete,                          |
      data: { confirm: 'Czy jestes pewien?' }        |
    
%p
  = link_to 'Powrót', welcome_index_path, :class => 'btn btn-large btn-primary'