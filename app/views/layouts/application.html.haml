!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
    %meta{:charset => "utf-8"}/
    %title Holo Theme
    %meta{:content => "Bootply", :name => "generator"}/
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}/
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    
    = csrf_meta_tags
    #flash
      = flash[:notice] if flash[:notice]
      = flash[:alert] if flash[:alert]
    /[if lt IE 9]
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
  %body
    .page-container
      / top navbar
      %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
        .navbar-header
          %button.navbar-toggle{"data-target" => ".sidebar-nav", "data-toggle" => "offcanvas", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} Zarządzacz Projektami
      .container-fluid
        .row.row-offcanvas.row-offcanvas-left
          / sidebar
          #sidebar.col-xs-6.col-sm-3.sidebar-offcanvas{:role => "navigation"}
            %div{"data-offset-bottom" => "90", "data-offset-top" => "45", "data-spy" => "affix"}
              %ul#sidebar-nav.nav
                %li
                  = link_to 'Strona Główna', '/'
                %li
                  = link_to 'Lista Projektów', projects_path
                %li
                  = link_to 'Ustawienia systemu', projects_path
                %li
                  = link_to 'O systemie', projects_path
                  
                - if user_signed_in?
                  %li #{link_to 'Sign out', destroy_user_session_path, method: :delete}
                - else
                  = link_to 'Sign in', new_user_session_path      
          / /sidebar
          / /main
          .col-xs-12.col-sm-9{"data-spy" => "scroll", "data-target" => "#sidebar-nav"}
            .panel.panel-default
              .panel-heading
              .panel-body
                = yield
                
            
    .clearfix
        
    / /.page-container
    %footer
      / footer
      .container
        .row
          %ul.list-unstyled.text-right
            %li.col-sm-4.col-xs-6
              %a{:href => "#"} O projekcie
        / /row
      / /container
    / script references
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"}
    %script{:src => "assets/javascripts/bootstrap.min.js"}
    %script{:src => "assets/javascripts/scripts.js"}